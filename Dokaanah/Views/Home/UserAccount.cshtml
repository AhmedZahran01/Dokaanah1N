@model Dokaanah.Models.Customer 
@{
    // var CurrentUserInView = (Customer)ViewBag.CurrentUserData;
}
 

<body>

    <!-- =====================================[BreadCrumb Section]======================================================= -->

    <div class="container mt-5 mb-5">
        <div class="accountt-head d-flex justify-content-between">
            <h1>   Account  </h1>
        </div>
        <h3 class="mt-3 mt-md-2"> Hello   , @Model.UserName          </h3>

        <h5 class="mt-3 mt-md-2" >
            Email    : <span class="text-secondary"> @Model.Email </span>

        </h5>
        <hr class="mt-4 row col-12 col-lg-7">



        <div class="mt-2 col-12 col-lg-9">
            <div class="btn-group" role="group" aria-label="Basic example">
                <a class="btn  active" id="ordersBtn" onclick="showOrders()">My Orders</a>
                <a class="btn " id="accountInfoBtn" onclick="showAccountInfo()">Account Info</a>
            </div>
           
            <div id="orders" class="border-custom mt-5 col-12 col-lg-9">
                <h4>Order List</h4>
                <div class="order-div-list mt-5">
                    <div class="card-body cartBody">
                        <div class="d-flex align-items-center bg-light p-4 rounded-4">
                            <div class="productImage">
                                <img src="~/images/prod/12.jpg" style="width: 90px; height: 90px; border-radius: 50%;"
                                     alt="Product Image" />
                            </div>
                            <div class="ms-3">
                                <h5 class="productName">Shirt</h5>
                                <p class="price">$19.99</p>
                                <div class="color" style="background-color: #000;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            


            <div id="accountinfo" class="hidden-class-info mt-5 col-12 col-lg-9">
                <h2 class="mb-3">Account Information</h2>
                <form asp-action="EditUserAccount" asp-controller="Customers">
                     
                    <div class="mb-3">
                        <label asp-for="UserName"  class="form-label">Name</label>
                        <input asp-for="UserName" type="text" class="form-control"   placeholder="name">
                    </div>

                    <div class="mb-3">
                        <label  asp-for="Password" class="form-label"> Password</label>
                        <input asp-for="Password" type="text" class="form-control"  >
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"> Address</label>
                        <input asp-for="Address" type="text" class="form-control" >
                    </div>

                    <button asp-action="EditUserAccount" asp-controller="Customers" type="submit" class="btn btn-dark" aria-label="Update Info">Update Info</button>
                </form>
            </div>
        </div>
    </div>

    <!-- ==========================================[Account]================================================== -->




    <script>
        function showOrders() {
            document.getElementById("orders").style.display = "block";
            document.getElementById("accountinfo").style.display = "none";
            document.getElementById("ordersBtn").classList.add("active");
            document.getElementById("accountInfoBtn").classList.remove("active");
        }

        function showAccountInfo() {
            document.getElementById("orders").style.display = "none";
            document.getElementById("accountinfo").style.display = "block";
            document.getElementById("ordersBtn").classList.remove("active");
            document.getElementById("accountInfoBtn").classList.add("active");
        }

        showOrders();
    </script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js"
            integrity="sha512-TPh2Oxlg1zp+kz3nFA0C5vVC6leG/6mm1z9+mA81MI5eaUVqasPLO8Cuk4gMF4gUfP5etR73rgU/8PNMsSesoQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Link Jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Main Js -->
    <script src="~/js/main.js"></script>
</body>
