@{
    Layout = "~/Views/Shared/withNoAction.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Congratulations</title>
    <!-- Link Favicon Icon -->
    <link rel="icon" type="image/x-icon" href="~/images/features/favcon.png">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <!-- Link Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 80vh; /* Decreased height */
            margin: 0;
            background-color: #f8f9fa;
            text-align: center;
        }

        .container {
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 900px; /* Increased width */
            width: 100%;
        }

            .container img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
            }

        .thank-you-message {
            margin-top: 1rem;
        }

            .thank-you-message h2 {
                font-weight: bold;
                color: #28a745;
            }

        .buttons {
            margin-top: 2rem;
        }

            .buttons a {
                margin: 0 1rem;
            }
    </style>
</head>

<body>
    <div class="container">
        <img src="~/images/General/orderSuccess.png" class="img-fluid" alt="Order Success">
        <div class="thank-you-message">
            <p class="fs-4">Mohamed,</p>
            <h2>Thank you for your order!</h2>
        </div>
        <div class="buttons d-flex justify-content-center">
             <a asp-controller="home" asp-action="shop" class="btn btn-dark text-nowrap">Continue Shopping</a>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>


</body>
</html>


